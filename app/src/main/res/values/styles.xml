<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainContentText">
        <item name="android:layout_margin">@dimen/content_text_margin</item>
        <item name="android:layout_width">@dimen/settings_item_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/primarySecondaryText</item>
        <item name="android:divider">@color/primaryDivider</item>
    </style>

    <style name="EditTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/primarySecondaryText</item>
        <item name="android:divider">@color/primaryDivider</item>
        <item name="android:textSize">@dimen/editTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainContentSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/primarySecondaryText</item>
        <item name="android:divider">@color/primaryDivider</item>
        <item name="android:layout_marginEnd">@dimen/spinner_margin</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>
</resources>
